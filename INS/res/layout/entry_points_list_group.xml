<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="20dp" >

    <TextView
        android:id="@+id/entry_points_list_child_name_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textIsSelectable="false" />

    <TextView
        android:id="@+id/entry_points_list_level"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/entry_points_list_child_name_text"
        android:text="@string/activity_entry_points_list_group_level_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="false" />

    <TextView
        android:id="@+id/entry_points_list_level_text"
        android:layout_below="@id/entry_points_list_child_name_text"
        android:layout_toRightOf="@id/entry_points_list_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="false" />

    <TextView
        android:id="@+id/entry_points_list_child_lat"
        android:layout_below="@id/entry_points_list_child_name_text"
        android:layout_toRightOf="@id/entry_points_list_level_text"
        android:text="@string/activity_entry_points_list_group_lat_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="false" />

    <TextView
        android:id="@+id/entry_points_list_child_lat_text"
        android:layout_below="@id/entry_points_list_child_name_text"
        android:layout_toRightOf="@id/entry_points_list_child_lat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="false" />

    <TextView
        android:id="@+id/entry_points_list_child_lon"
        android:layout_below="@id/entry_points_list_child_name_text"
        android:layout_toRightOf="@id/entry_points_list_child_lat_text"
        android:text="@string/activity_entry_points_list_group_lon_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="false" />

    <TextView
        android:id="@+id/entry_points_list_child_lon_text"
        android:layout_alignParentRight="true"
        android:layout_below="@id/entry_points_list_child_name_text"
        android:layout_toRightOf="@id/entry_points_list_child_lon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="false" />

</RelativeLayout>